<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="false">

    <!--spring boot의 기본 logback base.xml은 그대로 가져간다.-->
    <include resource="org/springframework/boot/logging/logback/base.xml" />
    <include resource="appender/console-appender.xml" />
    <include resource="appender/file-appender.xml" />
    <include resource="appender/json-appender.xml" />

    <logger name="ControllerLogger" additivity="false">
        <level value = "INFO" />
        <appender-ref ref="file" />
        <appender-ref ref="json" />
    </logger>
</configuration>